{
    "id": "aflow-social-post",
    "name": "Social Media Post",
    "version": "1.0.0",
    "description": "Publish content to social media platforms",
    "author": "AIKAFLOW",
    "category": "output",
    "enabled": true,
    "icon": "share-2",
    "color": "pink",
    "type": "api",
    "executionType": "api",
    "apiConfig": {
        "provider": "sapi",
        "endpoint": "https://api.postforme.dev/v1/social-posts"
    },
    "apiMapping": {
        "request": {
            "social_accounts": "{{accounts}}",
            "caption": "{{caption}}",
            "media": "{{media}}",
            "scheduled_at": "{{scheduledAt}}"
        },
        "response": {
            "taskId": "$.id"
        }
    },
    "nodeTypes": [
        "social-post"
    ],
    "scripts": [
        "social-accounts.js"
    ],
    "hasNodes": true,
    "injectUI": true
}